<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>
<p>
  <strong>Orders:</strong>
  <table class="table table-striped table-condensed">
  	<tbody>
  	<% @user.orders.each do |order| %>
  		<tr>
  			<td><%= order.id %></td>
  			<td><%= order.address %></td>
  		</tr>
  	<%end%>
  	</tbody>
  </table>
 
</p>
<%= link_to 'New Order', new_order_path({:uid=>@user.id}) , class:'btn btn-info btn-block'%> 
<%= link_to 'Edit', edit_user_path(@user) , class:'btn btn-info btn-block'%> 
<%= link_to 'Back', users_path , class:'btn btn-info btn-block'%>
