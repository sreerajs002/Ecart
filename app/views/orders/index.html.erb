<p id="notice"><%= notice %></p>

<h1>Appnexus Info</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>order id</th>
      <th>ordered by</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead> 

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.user.name %></td>
        <td><%= order.address%></td>
        <td>
        <%= link_to order , class:'btn btn-success btn-xs ' do%><i class="glyphicon glyphicon-eye-open"></i><% end %>
        <%= link_to  edit_order_path(order) , class:'btn btn-warning btn-xs' do%><i class="glyphicon glyphicon-pencil"></i><% end %> 
        <%= link_to order, method: :delete, data: { confirm: 'Are you sure?' } , class:'btn btn-danger btn-xs' do%><i class="glyphicon glyphicon-trash"></i><% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
 