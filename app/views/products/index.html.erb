<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Prid</th>
      <th>Prname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.prid %></td>
        <td><%= product.prname %></td>
        <td>
        <%= link_to product , class:'btn btn-success btn-xs ' do%><i class="glyphicon glyphicon-eye-open"></i><% end %>
        <%= link_to  edit_product_path(product) , class:'btn btn-warning btn-xs' do%><i class="glyphicon glyphicon-pencil"></i><% end %> 
        <%= link_to product, method: :delete, data: { confirm: 'Are you sure?' } , class:'btn btn-danger btn-xs' do%><i class="glyphicon glyphicon-trash"></i><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
 
<%= link_to 'New Product', new_product_path, class:"btn btn-info btn-block" %>
